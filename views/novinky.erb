<div id="main">

  <div class="content">

<h1><%= @page_title %></h1>

<div class="press_releases archive">
<% @blog_items.each do |blog_item| %>
<div class="item">
<a href="<%= blog_item.link %>">
<h3><%= blog_item.title %> <small class="date"><%= human_date(blog_item.pubDate) %></small></h3>
<p><%= truncate( blog_item.description, 250) %> <span class="more">Celý&nbsp;článek&nbsp;&raquo;</span></p>
</a>
</div>

<% end %>
</div><!-- /press_releases -->

  </div><!-- /content -->

</div><!-- /main -->